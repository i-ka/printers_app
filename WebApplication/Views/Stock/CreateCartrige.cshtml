@using WebApplication.Data.Models.Enums;
@model WebApplication.Data.Models.Cartridge

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить картридж</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCartrige">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InventoryNumber" class="control-label"></label>
                <input asp-for="InventoryNumber" class="form-control"/>
                <span asp-validation-for="InventoryNumber" class="text-danger"></span>
                <label asp-for="CompatiblePrinter" class="control-label"></label>
                <select asp-for="CompatiblePrinter" asp-items="Html.GetEnumSelectList<PrinterType>()" class="form-control">
                    <option value="" selected>Выберете тип картриджа</option>
                </select>
                <span asp-validation-for="CompatiblePrinter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

