@model WebApplication.Data.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row"></div>
<div class="row">
    <div class="col-sm-4">
        @if (!User.Identity.IsAuthenticated) {
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" /><span asp-validation-for="Username" class="text-danger"></span>
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" /><span asp-validation-for="Password" class="text-danger"></span>
                    <input hidden asp-for="ReturnUrl" />
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-success" />
                </div>
            </form>
        } else {
            <h3>Already logged In</h3>
        }
    </div>
</div>

